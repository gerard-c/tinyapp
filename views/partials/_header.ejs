<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <!--if user cookie data is not found, header includes links to login and register pages-->
      <% if (!user || !loggedIn) { %>
          <a href="/login" style="margin: 1em">LOGIN</a>
          <a href="/register">REGISTER</a>
      <% } else { %>
        <!--if user cookie data is found, header includes the user's email and a logout button-->
          <form action="/logout" method="POST">
            <label for="logout" style="margin: 1em;">Logged in as: <%= user.email %>!</label>
            <button type="submit" name="logout" class="btn btn-outline-dark">Logout</button>
          </form>
      <% } %>
    </div>
  </nav>
</header>